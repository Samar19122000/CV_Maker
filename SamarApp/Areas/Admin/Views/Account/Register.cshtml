@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Areas/Admin/Views/Shared/_Athunt.cshtml";
}

             <h4>New here?</h4>
                <h6 class="font-weight-light">Signing up is easy. It only takes a few steps</h6>
                <form  class="pt-3" method ="post"  asp-controller = "Account" asp-action = "Register">
                    <div asp-validation-summary ="All"></div>

                    
                   <div class="form-group">
                    <input type="text" class="form-control form-control-lg" asp-for = "UserName" required=""  placeholder="Username">
                  </div>

                  <div class="form-group">
                    <input type="email" class="form-control form-control-lg" asp-for = "Email" required="" placeholder="Email">
                  </div>

                  
                   <div class="form-group">
                    <input type="password" class="form-control form-control-lg" asp-for = "Password" required="" placeholder="Password">
                  </div>

                  <div class="mb-4">
                    <div class="form-check">
                      <label class="form-check-label text-muted">
                        <input type="checkbox" asp-for = "IsAgree" class="form-check-input"> I agree to all Terms & Conditions </label>
                     <div class="clear"> </div>
                     </div>
                    </div>


                  <div class="mt-3">
                   <button type="submit" class="btn btn-gradient-primary me-2">SIGN UP</button>
                  </div>
                  <div class="text-center mt-4 font-weight-light"> Already have an account? <a asp-controller ="Account" asp-action = "Login" class="text-primary">Login</a>
                  </div>

                </form>


