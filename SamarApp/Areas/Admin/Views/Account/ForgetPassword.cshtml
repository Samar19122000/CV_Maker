@model ForgetPasswordViewModel
@{
    ViewData["Title"] = "ForgetPassword";
    Layout = "~/Areas/Admin/Views/Shared/_Athunt.cshtml";
}
                   <h6 class="font-weight-light">Please Enter Your Email.</h6>
                 <form class="pt-3" method = "post" asp-controller = "Account" asp-action = "ForgetPassword" >
                   <div asp-validation-summary = "All"></div>
                     <div class="form-group">
                    <input type="email" class="form-control form-control-lg" asp-for = "Email"  required = "" placeholder="Email">
                     
                </div>
                  <div class="text-center mt-4 font-weight-light"> <button type="submit" class="btn btn-gradient-primary me-2">Forget Password</button>
                  </div>
                </form>



