@model ResetPasswordViewModel
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Areas/Admin/Views/Shared/_Athunt.cshtml";
}

              <h6 class="font-weight-light">Reset Your Password.</h6>
                 <form class="pt-3" method = "post" asp-controller = "Account" asp-action = "ResetPassword" >
                

                  <div class="form-group">
                    <input type="hidden" class="form-control form-control-lg" asp-for = "Email" >
                  </div>

                  <div class="form-group">
                    <input type="hidden" class="form-control form-control-lg" asp-for = "Token" >
                  </div>
                     
                     <div class="form-group">
                        <input type="password" class="form-control form-control-lg" asp-for = "Password"  placeholder="Password">
                     </div>
                  
                  <div class="form-group">
                    <input type="password" class="form-control form-control-lg" asp-for = "ConfirmPassword"  placeholder="ConfirmPassword">
                  </div>
                  
                  <div class="text-center mt-4 font-weight-light"> <button type="submit" class="btn btn-gradient-primary me-2">Reset Password</button>
                  </div>
                </form>

