@model LoginViewModel
@{
    ViewData["Title"] = "Login Page";
    Layout = "~/Areas/Admin/Views/Shared/_Athunt.cshtml";
}

           <h4>Hello! let's get started</h4>
                <h6 class="font-weight-light">Sign in to continue.</h6>
                <form class="pt-3" method = "post" asp-controller = "Account" asp-action = "Login" >
                 <div asp-validation-summary = "All"></div>
                    <div class="form-group">
                    <input type="text" class="form-control form-control-lg" asp-for = "UserName" required="" placeholder="User Name">
                     
                </div>

                  <div class="form-group">
                    <input type="password" class="form-control form-control-lg" asp-for = "Password" required="" placeholder="Password">
           
                </div>

                  <div class="mt-3">
                    <button type="submit" class="btn btn-gradient-primary me-2">SIGN IN</button>
                  </div>

                  <div class="my-2 d-flex justify-content-between align-items-center">
                    <div class="form-check">
                      <label class="form-check-label text-muted">
                        <input type="checkbox" asp-for = "RememberMe" class="form-check-input"> Keep me signed in </label>
                         <div class="clear"> </div>
                    </div>
                    <a asp-controller = "Account" asp-action = "ForgetPassword" class="auth-link text-black">Forgot password?</a>
                  </div>

                  <div class="text-center mt-4 font-weight-light"> Don't have an account? <a asp-controller = "Account" asp-action = "Register" class="text-primary">SIGN UP</a>
                  </div>
                </form>

