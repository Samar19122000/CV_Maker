@model TbEducation

<div class="container p-5 ">         
        <!-- partial -->
        <div class="main-panel">
          <div class="content-wrapper">
            <div class="page-header">
              <h3 class="page-title"> Form elements </h3>
            </div>

            <!-- Our Form -->
              <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Horizontal Form</h4>
                    <form class="forms-sample" method ="post" role = "form" asp-controller = "Education" asp-action = "Save">
                      
                        <div asp-validation-summary = "All" ></div>
                        <div class="form-group row">
                        <label for="exampleInputEmail2" class="col-sm-3 col-form-label">Qualification</label>
                        <div class="col-sm-9">
                          <input asp-for = "Qualification" type="text" class="form-control"  placeholder="Your Qualification">
                          <span asp-validation-for = "Qualification" class = "text-danger"></span> 
                      </div>
                      </div>

                      <div class="form-group row">
                        <label for="exampleInputMobile" class="col-sm-3 col-form-label">Academy Name</label>
                        <div class="col-sm-9">
                          <input asp-for = "AcademyName" type="text" class="form-control"   placeholder="The Academy Name">
                          <span asp-validation-for = "AcademyName" class = "text-danger"></span>  
                      </div>
                      </div>
                     
                      <div class="form-group row">
                        <label for="exampleInputConfirmPassword2" class="col-sm-3 col-form-label">Start Date</label>
                        <div class="col-sm-9">
                          <input asp-for = "QualiDate" type="date" class="form-control"  placeholder="Start Date">
                          <span asp-validation-for = "QualiDate" class = "text-danger"></span> 
                      </div>
                      </div>

                      <div class="form-group row">
                        <label for="exampleInputConfirmPassword2" class="col-sm-3 col-form-label">End Date</label>
                        <div class="col-sm-9">
                          <input  asp-for = "QualiEndDate" type="date" class="form-control" placeholder="End Date">
                          <span asp-validation-for = "QualiEndDate" class = "text-danger"></span>  
                      </div>
                      </div>
                        <div class="form-group row">                
                        <div class="col-sm-9">
                          <input  type = "hidden" asp-for = "Id"  class="form-control">
                        </div>
                      </div>
                      <button type="submit" class="btn btn-gradient-primary me-2">Save</button>
                      <button class="btn btn-gradient-dark" asp-controller = "Education" asp-action = "MyEducation">Cancel</button>
                    </form>
                  </div>
                </div>
              </div>






              
        </div>
        <!-- main-panel ends -->
      </div>
      <!-- page-body-wrapper ends -->
    </div>


  