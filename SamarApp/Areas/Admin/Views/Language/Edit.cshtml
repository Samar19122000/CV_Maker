
@model TbLanguage              

<div class="container p-5 ">         
        <!-- partial -->
        <div class="main-panel">
          <div class="content-wrapper">
            <div class="page-header">
              <h3 class="page-title"> Form elements </h3>
            </div>

            <!-- Our Form -->
              <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Horizontal Form</h4>
                    <form class="forms-sample" method ="post" role = "form" asp-controller = "Language" asp-action = "Save">
               
                         <div asp-validation-summary = "All"></div>
                      <div class="form-group row">
                        <label for="exampleInputEmail2" class="col-sm-3 col-form-label">Langauge </label>
                        <div class="col-sm-9">
                          <input asp-for = "LangaugeName" type="text" class="form-control"  placeholder="Langauge Name">
                           <span asp-validation-for = "LangaugeName" class = "text-danger"></span>   
                      </div>
                      </div>

                      <div class="form-group row">
                        <label for="exampleInputMobile" class="col-sm-3 col-form-label"> Level</label>
                        <div class="col-sm-9">
                          <input asp-for = "Level" type="text" class="form-control" placeholder="Your Level">
                           <span asp-validation-for = "Level" class = "text-danger"></span> 
                       </div>
                      </div>
                     
                        <div class="form-group row">                
                        <div class="col-sm-9">
                          <input  type = "hidden" asp-for = "Id"  class="form-control">
                        </div>
                      </div>
                      <button type="submit" class="btn btn-gradient-primary me-2">Save</button>
                      <button class="btn btn-gradient-dark" asp-controller = "Language" asp-action = "MyLanguage">Cancel</button>
                    </form>
                  </div>
                </div>
              </div>






              
        </div>
        <!-- main-panel ends -->
      </div>
      <!-- page-body-wrapper ends -->
    </div>


  